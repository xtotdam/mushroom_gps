Screen:
    BoxLayout:
        orientation: "vertical"
        size_hint: [.9, 1]
        pos_hint: { 'top' : 1, 'right': .95}


        # Label:
        #     text: "Я сейчас тут"
        #     color: (0,1,0,1)
        #     size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.25

            Label:
                id: label_coords
                text: "широта и долгота"
                # font_size: 35
                # size_hint_y: 0.12

            Label:
                id: label_dt
                text: 'X'
                color: (1, 0.5, 0, 1)
                # size_hint_y: 0.12
                size_hint_x: 0.25
                font_size: 70


        # Label:
        #     text: "и я нашел"
        #     color: (0,1,0,1)
        #     size_hint_y: 0.1


        TabbedPanel:
            do_default_tab: False


            TabbedPanelItem:
                text: "Грибы"

                GridLayout:
                    id: buttons
                    cols: 2

                    MushButton:
                        text: "Белый"
                        rgb: "#ffffff"

                    MushButton:
                        text: "Подберезовик"
                        rgb: "#873e23"

                    MushButton:
                        text: "Подосиновик"
                        rgb: "#cc0000"

                    MushButton:
                        text: "Лисички"
                        rgb: "#ffcc00"

                    MushButton:
                        text: "Козелок"
                        rgb: "#aaffaa"

                    MushButton:
                        text: "Опята"
                        rgb: "#aaaaaa"

                    MushButton:
                        text: "Маслята"
                        rgb: "#f5bc49"

                    MushButton:
                        text: "Чернушка"
                        rgb: "#000000"

                    MushButton:
                        text: "Сыроежка"
                        rgb: "#00ff00"

                    MushButton:
                        text: "Шампиньон"
                        rgb: "#888888"

                        # волнушка
                        # рыжик
                        # шампиньон


            TabbedPanelItem:
                text: "Ягоды"

                GridLayout:
                    id: buttons
                    cols: 2

                    BerryButton:
                        text: "Земляника"
                        rgb: "#F20739"

                    BerryButton:
                        text: "Черника"
                        rgb: "#4D115C"

                    BerryButton:
                        text: "Малина"
                        rgb: "#BE2561"

                    BerryButton:
                        text: "Брусника"
                        rgb: "#ff0000"

                    BerryButton:
                        text: "Костяника"
                        rgb: "#F21707"

                    BerryButton:
                        text: "Клюква"
                        rgb: "#F20739"

            TabbedPanelItem:
                text: "Что-то еще"

                BoxLayout:
                    orientation: "vertical"

                    GridLayout:
                        cols: 2
                        orientation: "lr-tb"
                        size_hint_y: 0.2

                        ProvGroupTB:
                            text: "Fused"
                            id: tg_fused

                        ProvGroupTB:
                            text: "GPS"
                            state: "down"
                            id: tg_gps

                    TextInput:
                        id: something
                        hint_text: "Что это?"

                    GridLayout:
                        cols: 2
                        orientation: "lr-tb"
                        size_hint_y: 0.5

                        WhatGroupTB:
                            text: "Гриб"
                            state: "down"
                            id: tg_mushroom

                        WhatGroupTB:
                            text: "Ягоды"
                            id: tg_berry

                        WhatGroupTB:
                            text: "Ориентир"
                            id: tg_orientir

                        WhatGroupTB:
                            text: "Еще что-то"
                            id: tg_other

                    Button:
                        text: "Отметить"
                        size_hint_y: 0.25
                        background_color: (0,1,0.5,1)
                        on_release: app.save_point(something.text, '#0000ff', (tg_mushroom.state, tg_berry.state, tg_orientir.state, tg_other.state))



        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint_y: 0.25

            Label:
                id: label_log
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                text:
                    'coordinate log'

        GridLayout:
            id: buttons
            rows: 1
            size_hint_y: 0.15

            Button:
                text: "Сохранить\nфайлы"
                background_color: (1,1,1,1)
                size_hint_y: 0.15
                on_release: app.save_files()

            Button:
                text: "Восста-\nновить"
                background_color: (0,1,0,1)
                on_release: app.restore_storage()

            Button:
                text: "Убрать\nпоследнюю\nзапись"
                background_color: (1,1,0,1)
                on_release: app.remove_last()

            Button:
                text: "Очистить"
                background_color: (1,0,0,1)
                size_hint_y: 0.15
                on_release: app.clear_storage()

<MyButton@Button>:
    on_release: app.save_point(self.text, self.rgb, self.category)
    rgb: "#333333"
    background_color: rgba(self.rgb)

<MushButton@MyButton>:
    category: 'mushroom'

<BerryButton@MyButton>:
    category: 'berry'


<WhatGroupTB@ToggleButton>:
    group: 'what'

<ProvGroupTB@ToggleButton>:
    group: 'provider'
    # background_color: rgba("#ffff88")
